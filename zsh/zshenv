PATH="$HOME/bin:$HOME/.brew/bin:/opt/local/apache2/bin:/opt/local/lib/postgresql83/bin:/usr/local/bin:/usr/bin/perlbin/core:/opt/local/bin:$PATH"

MANPATH="/usr/local/man:/opt/local/man:$MANPATH"

export LESS="-r -f"
export EDITOR="vim"
setopt noglobalrcs
export PAGER=less

export MY_HOSTNAME=`hostname -s`
export OOO_FORCE_DESKTOP=gnome

export PERLBREW_ROOT=$HOME/.perl5/perlbrew
test -e $HOME/.perl5/perlbrew/etc/bashrc && source $HOME/.perl5/perlbrew/etc/bashrc

# rid duplicates
typeset -U manpath
typeset -U path
