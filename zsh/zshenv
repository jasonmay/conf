PATH="$HOME/bin:/opt/local/lib/postgresql83/bin:/usr/local/bin:/usr/bin/perlbin/core:/opt/local/bin:$PATH"

MANPATH="/usr/local/man:/opt/local/man:$MANPATH"

export LESS="-r -f"
export EDITOR="vim"
setopt noglobalrcs
export PAGER=less

export MY_HOSTNAME=`hostname -s`

case "$MY_HOSTNAME" in
    jinx|jarsonmar|culex)
    export MODULEBUILDRC="$HOME/.perl5/.modulebuildrc"
    export PERL_MM_OPT="INSTALL_BASE=$HOME/.perl5"
    export PERL5LIB="$HOME/.perl5/lib/perl5:$HOME/.perl5/lib/perl5/darwin-2level"
    export PATH="$HOME/.perl5/bin:$PATH"
    export MANPATH="$HOME/.perl5/man:$MANPATH"
    ;;
esac

# rid duplicates
typeset -U manpath
typeset -U path
