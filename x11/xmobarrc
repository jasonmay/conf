Config { font = "-misc-fixed-*-*-*-*-8-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Bottom
       , lowerOnStart = True
       , commands = [ Run Weather "KLNS" ["-t","<tempF>F","-L","50","-H","75","--normal","darkgreen","--high","darkred","--low","lightblue"] 36000
                    , Run Network "wlan0" ["-L","0","-H","32","--normal","darkgreen","--high","darkred"] 10
                    , Run Cpu ["-L","3","-H","50","--normal","darkgreen","--high","darkred"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
    		    , Run Date "%a %b %_d %H:%M:%S" "date" 10
                    , Run Battery [] 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %KLNS% | %cpu% | %memory% * %swap% | %wlan0% | %battery% | <fc=#ee9a00>%date%</fc>"
       }

